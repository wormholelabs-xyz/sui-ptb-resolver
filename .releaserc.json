{
  "branches": [
    "release",
    "hotfix/*",
    { "name": "main", "prerelease": "development" }
  ],
  "plugins": [
    "semantic-release-unsquash",
    [
      "@semantic-release/npm",
      {
        "npmPublish": true,
        "tarballDir": "dist"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "dist/*.tgz",
            "label": "Package tarball"
          }
        ],
        "addReleases": "bottom"
      }
    ]
  ]
}
